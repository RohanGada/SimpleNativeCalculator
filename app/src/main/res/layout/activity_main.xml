<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relative"
    android:background="#f4f4f4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/textView"
        android:layout_marginTop="105dp"
        android:background="#ffffff"
        android:gravity="fill_vertical|right"
        android:paddingRight="20dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/button1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/button2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/button4"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/button5"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/button6"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/button7"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/button8"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/button9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/button0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/buttonAdd"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_above="@+id/button6"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/buttonSub"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/buttonAdd"
        android:layout_alignStart="@+id/buttonAdd" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="*"
        android:id="@+id/buttonMulti"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/buttonSub"
        android:layout_alignStart="@+id/buttonSub" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/buttonDiv"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/button0"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/buttonDot"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/buttonEquals"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/buttonMulti"
        android:layout_toRightOf="@+id/buttonMulti"
        android:layout_toEndOf="@+id/buttonMulti"
        android:layout_alignBottom="@+id/buttonDiv" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/buttonC"
        android:textSize="25sp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonAdd"
        android:layout_alignBottom="@+id/buttonSub" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/textView2"
        android:background="#ffffff"
        android:paddingRight="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|right"
        android:paddingBottom="5dp" />

</RelativeLayout>
